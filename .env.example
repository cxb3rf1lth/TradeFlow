# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Email Service (Resend API)
RESEND_API_KEY=re_your_api_key_here

# Server Configuration
PORT=5000
NODE_ENV=production

# Optional: For development
# NODE_ENV=development

# ==========================================
# AI Integration - Claude (Anthropic)
# ==========================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==========================================
# CRM Integrations
# ==========================================

# HubSpot CRM
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret
HUBSPOT_REDIRECT_URI=http://localhost:5000/api/integrations/hubspot/callback

# Bigin by Zoho CRM
BIGIN_CLIENT_ID=your_bigin_client_id
BIGIN_CLIENT_SECRET=your_bigin_client_secret
BIGIN_REDIRECT_URI=http://localhost:5000/api/integrations/bigin/callback

# ==========================================
# Project Management Integrations
# ==========================================

# Trello
TRELLO_API_KEY=your_trello_api_key
TRELLO_API_SECRET=your_trello_api_secret
TRELLO_REDIRECT_URI=http://localhost:5000/api/integrations/trello/callback

# ==========================================
# Microsoft Integrations
# ==========================================
# Note: All Microsoft integrations use the same OAuth credentials

# Microsoft Graph API (for OneDrive, OneNote, Outlook, Teams)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=http://localhost:5000/api/integrations/microsoft/callback
MICROSOFT_TENANT_ID=common

# ==========================================
# Webhook Configuration
# ==========================================
WEBHOOK_SECRET=your_webhook_secret_key_here

# ==========================================
# Optional: Additional Integrations
# ==========================================

# Jira (if needed)
# JIRA_CLIENT_ID=your_jira_client_id
# JIRA_CLIENT_SECRET=your_jira_client_secret
# JIRA_REDIRECT_URI=http://localhost:5000/api/integrations/jira/callback
# JIRA_DOMAIN=https://your-domain.atlassian.net

# Slack (if needed)
# SLACK_CLIENT_ID=your_slack_client_id
# SLACK_CLIENT_SECRET=your_slack_client_secret
# SLACK_REDIRECT_URI=http://localhost:5000/api/integrations/slack/callback

# NetSuite (if needed)
# NETSUITE_ACCOUNT_ID=your_account_id
# NETSUITE_CONSUMER_KEY=your_consumer_key
# NETSUITE_CONSUMER_SECRET=your_consumer_secret
# NETSUITE_TOKEN_ID=your_token_id
# NETSUITE_TOKEN_SECRET=your_token_secret
