# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/tradeflow
# Example for Neon: postgresql://user:password@ep-example-123456.us-east-1.aws.neon.tech/neondb?sslmode=require

# Claude AI Integration
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
# Get your API key from: https://console.anthropic.com/

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=noreply@yourdomain.com
# Sign up at: https://resend.com/

# Microsoft 365 OAuth Configuration
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id
MICROSOFT_REDIRECT_URI=http://localhost:5000/auth/microsoft/callback
# Register your app at: https://portal.azure.com/ > App registrations
# Required permissions: User.Read, Calendars.ReadWrite, Mail.ReadWrite, Notes.ReadWrite, Files.ReadWrite.All, Chat.ReadWrite

# HubSpot Integration
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_REDIRECT_URI=http://localhost:5000/auth/hubspot/callback
# Create app at: https://developers.hubspot.com/
# Required scopes: crm.objects.contacts, crm.objects.companies, crm.objects.deals

# Trello Integration
TRELLO_API_KEY=your-trello-api-key
TRELLO_API_TOKEN=your-trello-api-token
# Get credentials at: https://trello.com/power-ups/admin
# API Key and Token needed

# Bigin (Zoho) Integration
BIGIN_CLIENT_ID=your-bigin-client-id
BIGIN_CLIENT_SECRET=your-bigin-client-secret
BIGIN_REDIRECT_URI=http://localhost:5000/auth/bigin/callback
BIGIN_API_DOMAIN=https://www.zohoapis.com
# Register at: https://api-console.zoho.com/
# Required scopes: ZohoBigin.modules.ALL, ZohoBigin.settings.ALL

# Application Configuration
NODE_ENV=development
PORT=5000

# Security - REQUIRED for production
# Generate strong random strings using: openssl rand -base64 32
SESSION_SECRET=your-secure-random-session-secret-here-CHANGE-IN-PRODUCTION
JWT_SECRET=your-jwt-secret-here-CHANGE-IN-PRODUCTION

# Comma-separated list of allowed origins for CORS (e.g., Amplify + custom domains)
ALLOWED_ORIGINS=http://localhost:5173
# Optional AWS region hint for health endpoint observability output
AWS_REGION=us-east-1

# Optional: Analytics & Monitoring
# SENTRY_DSN=your-sentry-dsn
# ANALYTICS_ID=your-analytics-id

# Optional: File Upload Configuration
# MAX_FILE_SIZE=10485760  # 10MB in bytes
# UPLOAD_DIR=./uploads
